<html>
	<head>
		<title>CI</title>
	</head>
	<body>
		<form id='ciform' method='post' action='/cmdb'>
			<div id='CIClass'>
Type: <input type='text' name='ci_class' value='<%= $ci->meta->name %>'/><br/>
			</div>
			<div id='CIProperties'>
% for my $property (sort { $a->{name} cmp $b->{name} } $ci->meta->get_all_attributes) {
<%= $ci->meta->find_attribute_by_name($property->name)->documentation || $property->name %>:
<input type='text' name='<%= $property->name %>' value='<%= eval '$ci->'.$property->name %>'/><br/>
% }
			</div>
			<input type='submit' value='update'/>
		</form>
	</body>
</html>
